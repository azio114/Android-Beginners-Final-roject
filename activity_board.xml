<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.xsandos.BoardActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/exit"
        android:layout_gravity="end"
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/replay"
        android:layout_gravity="start"
        android:src="@android:drawable/ic_menu_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/display_board"
        android:text="PLAYER1 TO PLAY"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_gravity="top|center"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical"-->
    <!--android:gravity="center">-->
    <LinearLayout
        android:id="@+id/the_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="0"
            android:textSize="32sp"
            android:background="@drawable/background1"/>

        <GridLayout
            android:id="@+id/the_board"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="3"
            android:background="@drawable/background1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/block_1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/block_2"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/block_3"
                android:layout_marginBottom="4dp"
                android:background="@drawable/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/block_4"
                android:background="@drawable/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/block_5"
                android:background="@drawable/blank"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/block_6"
                android:background="@drawable/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/block_7"
                android:layout_marginTop="4dp"
                android:background="@drawable/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/block_8"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/block_9"
                android:layout_marginTop="4dp"
                android:background="@drawable/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="0"
            android:textSize="32sp"
            android:background="@drawable/background1"/>
    </LinearLayout>
    <View
        android:id="@+id/center_vertical"
        android:background="@drawable/background1"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_height="200dp" />

    <View
        android:id="@+id/left_vertical"
        android:background="@drawable/background1"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_height="250dp" />

    <View
        android:id="@+id/right_vertical"
        android:background="@drawable/background1"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_height="250dp" />

    <View
        android:id="@+id/center_horizontal"
        android:background="@drawable/background1"
        android:layout_width="250dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_height="5dp" />

    <View
        android:id="@+id/bottom_horizontal"
        android:background="@drawable/background1"
        android:layout_width="250dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_height="5dp" />

    <View
        android:id="@+id/top_horizontal"
        android:background="@drawable/background1"
        android:layout_width="250dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:layout_height="5dp" />

    <View
        android:id="@+id/right_left_diagonal"
        android:background="@drawable/background1"
        android:rotation="45"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_height="350dp" />

    <View
        android:id="@+id/left_right_diagonal"
        android:background="@drawable/background1"
        android:rotation="135"
        android:layout_width="5dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_height="280dp" />

</FrameLayout>
